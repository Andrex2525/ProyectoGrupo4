<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Empathia.Vistas.Register"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*">

        <Image Source="flechavolver.png"
                   VerticalOptions="Start"
                   HeightRequest="50"
                   HorizontalOptions="Start"
                   Margin="10">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding VolverCommand}" />
            </Image.GestureRecognizers>
        </Image>

        <StackLayout HorizontalOptions="Center">

            <Label Text="Registrate"
                   FontSize="40"
                   HorizontalTextAlignment="Center"
                   FontFamily="Metropolis"
                   TextColor="#4A4B4D"
                   Margin="0,50,0,0" />
            <Label Text="Agrega tus datos para registrarte"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"
                   HorizontalOptions="Center"
                   FontSize="15"
                   FontFamily="Metropolis"
                   TextColor="#7C7D7E" />
            <StackLayout Margin="0,40,0,0">

                <Frame CornerRadius="30"
                   BackgroundColor="#F2F2F2"
                   HasShadow="False"
                   WidthRequest="350"
                   HeightRequest="20">
                    <Entry HorizontalOptions="Start"
                       FontSize="14"
                       PlaceholderColor="#B6B7B7"
                       TextColor="Black"
                       Placeholder="Nombres"
                       Margin="15,-30,0,-30" />
                </Frame>
                <Frame CornerRadius="30"
                   BackgroundColor="#F2F2F2"
                   HasShadow="False"
                   WidthRequest="350"
                   HeightRequest="20"
                   Margin="0,20,0,0">
                    <Entry HorizontalOptions="Start"
                       FontSize="14"
                       PlaceholderColor="#B6B7B7"
                       TextColor="Black"
                       Placeholder="Email"
                       Margin="15,-30,0,-30" />
                </Frame>
                <Frame CornerRadius="30"
                   BackgroundColor="#F2F2F2"
                   HasShadow="False"
                   WidthRequest="350"
                   HeightRequest="20"
                   Margin="0,20,0,0">
                    <Entry HorizontalOptions="Start"
                       FontSize="14"
                       PlaceholderColor="#B6B7B7"
                       TextColor="Black"
                       Placeholder="Número de teléfono"
                       Margin="15,-30,0,-30" />
                </Frame>
                <Frame CornerRadius="30"
                   BackgroundColor="#F2F2F2"
                   HasShadow="False"
                   WidthRequest="350"
                   HeightRequest="20"
                   Margin="0,20,0,0">
                    <Entry HorizontalOptions="Start"
                       FontSize="14"
                       PlaceholderColor="#B6B7B7"
                       TextColor="Black"
                       Placeholder="Contraseña"
                       Margin="15,-30,0,-30" />
                </Frame>
                <Frame CornerRadius="30"
                       BackgroundColor="#F2F2F2"
                       HasShadow="False"
                       WidthRequest="350"
                       HeightRequest="20"
                       Margin="0,20,0,0">
                    <Entry HorizontalOptions="Start"
                           FontSize="14"
                           PlaceholderColor="#B6B7B7"
                           TextColor="Black"
                           Placeholder="Confirmar Contraseña"
                           Margin="15,-30,0,-30" />
                </Frame>
            </StackLayout>
            <Button Command="{Binding HomeCommand}"
                    Text="Registrarse"
                    BackgroundColor="#FC6011"
                    TextColor="White"
                    FontFamily="Metropolis"
                    WidthRequest="380"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"
                    CornerRadius="30" />
            <StackLayout HorizontalOptions="Center"
                         Grid.Column="1"
                         Orientation="Horizontal"
                         Spacing="10"
                         Margin="0,15,0,0">
                <Label Text="¿Ya tienes una cuenta?"
                       FontSize="15"
                       FontFamily="Cabin"
                       TextColor="#4A4B4D"
                       
                       />
                <Label Text="Iniciar sesión"
                       FontAttributes="Bold"
                       FontSize="15"
                       FontFamily="Cabin"
                       TextColor="#FC6011">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoginCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </StackLayout>
    </Grid>
    
</ContentPage>